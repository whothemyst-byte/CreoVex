{
  "name": "creovox",
  "version": "0.1.0",
  "description": "Professional Anime Production Suite",
  "main": "src/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "vite",
    "dev:main": "electron .",
    "build": "npm run build:renderer && npm run build:main",
    "build:renderer": "vite build",
    "build:main": "tsc -p src/main/tsconfig.json",
    "build:engine": "cd engine && wasm-pack build --target web --out-dir pkg",
    "start": "electron ."
  },
  "keywords": [
    "anime",
    "animation",
    "production",
    "desktop"
  ],
  "author": "CreoVox Team",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^5.0.11"
  }
}
